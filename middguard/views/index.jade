doctype html
html(lang='en-us')
  head
    meta(charset='utf-8')
    title MiddGuard
    link(rel='stylesheet', href='static/css/base.css')
    link(rel='stylesheet', href='static/bower_components/jQuery-contextMenu/src/jquery.contextMenu.css')
    link(rel='stylesheet', href='static/bower_components/jquery-ui/themes/smoothness/jquery-ui.css')
    each link in css
      link(rel='stylesheet', href=link)
  body
    script.
      var middguard = middguard || {};
      middguard.user = {id: #{user.id}, username: '#{user.username}'};
    each script in clientLibs.js
      script(src=clientLibs.prefix + '/' + script)
    each script in appJs.js
      script(src=appJs.prefix + '/' + script)
    each script in js
      script(src=script)